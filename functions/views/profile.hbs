<h1>{{username}}</h1>
{{#if email}}
    <p>Email: {{email}}</p>

    <p>College/University: {{school}}</p>
    <a href="/user/{{username}}/edit">Edit profile</a>
    <a href="/saved/">Saved Blogs</a>
    <a href="/writeblog/">Write Blog</a>
    <a href="/DMsetting/">DM settings</a>
    <form method="delete" action="/deleteuser/{{username}}" onclick="return ConfirmDelete()">  
        <input type="submit" value="Delete User"  />
    </form>
{{/if}}

<script type="text/javascript">
function ConfirmDelete() { 
    if (confirm("Delete account?")) {
        return true;
    }
    return false;
}
</script>

{{#if followbutton}}
    <a href="/follow/{{username}}/">Follow</a>
{{/if}}
{{#if unfollowbutton}}
    <a href="/unfollow/{{username}}/">Unfollow</a>
{{/if}}
{{#if blockbutton}}
	<a href="/block/{{username}}/">Block</a>
{{/if}}
{{#if unblockbutton}}
	<a href="/unblock/{{username}}/">Unblock</a>
{{/if}}
{{#if messagebutton}}
    <form method="post" action="/sendmessage/{{username}}/">
        <textarea rows="8" name="body"></textarea><br><br>
        <input type="submit" value="Send Message">
    </form>
{{/if}}
