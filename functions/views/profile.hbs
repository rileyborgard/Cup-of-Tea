<h1>{{username}}</h1>
{{#if email}}
    <p>Email: {{email}}</p>
    <p>College/University: {{school}}</p>
    <a href="/user/{{username}}/edit">Edit profile</a>
    <a href="/saved/">Saved Blogs</a>
    <a href="/writeblog/">Write Blog</a>
    <form method="delete" action="/deleteuser/{{username}}" onclick="return ConfirmDelete()">  
        <input type="submit" value="Delete User"  />
    </form>
{{/if}}

<script type="text/javascript">
function ConfirmDelete() { 
    if (confirm("Delete account?")) {
        return true;
    }
    return false;
}
</script>

{{#if followbutton}}
    <a href="/follow/{{username}}/">Follow</a>
{{/if}}
{{#if unfollowbutton}}
    <a href="/unfollow/{{username}}/">Unfollow</a>
{{/if}}
{{#if messagebutton}}
    <a href="/sendmessage/{{username}}/">Send Message</a>
{{/if}}