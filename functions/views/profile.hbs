<h1>{{username}}</h1>
{{#if email}}
    <p>Email: {{email}}</p>
{{/if}}


    <form method="delete" action="/deleteuser/{{username}}" onclick="return ConfirmDelete()">  
        <input type="submit" value="Delete User"  />
    </form>
    


<script type="text/javascript">
function ConfirmDelete() { 
    if (confirm("Delete account?")) {
        return true;
    }
    return false;
}
</script>